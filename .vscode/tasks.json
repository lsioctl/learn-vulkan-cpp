{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I",
                "${fileDirname}/thirdparties/include",
                "-g",
                "device.cpp",
                "image2.cpp",
                "swapchain3.cpp",
                "pipeline5.cpp",
                "camera.cpp",
                "buffer2.cpp",
                "commandbuffer.cpp",
                // commented out because of stb
                // and I handle in very ugly way versionning :D
                // but it doesn't matter for now
                // "texture.cpp",
                // "texture2.cpp",
                "texture3.cpp",
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}",
                "-lglfw",
                "-lvulkan",
                "-ldl",
                "-lpthread",
                "-lX11",
                "-lXxf86vm",
                "-lXrandr",
                "-lXi",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}